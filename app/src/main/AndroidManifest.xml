<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hihonor.wearkitextdemo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WearKitDemo">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".PermissionActivity"
            android:exported="false">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT"></category>
                <action android:name="display.activity.TestSuitActivity"></action>
            </intent-filter>
        </activity>
        <activity
            android:name=".ClientActivity"
            android:exported="false" />
        <activity
            android:name=".DevicesActivity"
            android:exported="false" />
        <activity
            android:name=".MonitorActivity"
            android:exported="false" />
        <activity
            android:name=".NotifyActivity"
            android:exported="false" />
        <activity
            android:name=".P2pActivity"
            android:exported="false" />
        <meta-data
            android:name="com.hihonor.mcs.client.appid"
            android:value="00000000" />
    </application>

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
</manifest>